/* Reset default browser styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Body and general styles */
body {
  font-family: 'Roboto', sans-serif;
  background-color: #f2f3fb;
  line-height: 1.6;
  background: linear-gradient(to right, #ffecd2, #fcb69f);
}

.container {
